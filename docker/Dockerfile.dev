FROM node:24-alpine

WORKDIR /app

# package.jsonとpackage-lock.jsonをコピー
COPY package*.json ./

# 依存関係をインストール（devDependenciesも含む）
RUN npm install

# ソースコードをコピー
COPY . .

# ポートを公開
EXPOSE 3000

# 開発サーバーを起動（ホットリロード）
# ボリュームマウント後にもPrisma generateを実行
CMD ["sh", "-c", "npx prisma generate && npm run dev"]
